  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug current open test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "runtimeArgs": ["--inspect"],
      "args": ["--runInBand", "--watch", "${fileBasenameNoExtension}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
